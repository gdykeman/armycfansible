global
        log 127.0.0.1  local0
        log 127.0.0.1  local1 notice
        maxconn        12083
        user           haproxy
        group          haproxy
        spread-checks  5
        daemon
        stats socket /var/run/haproxy.sock mode 0600 level admin

defaults
        log           global
        option        dontlognull
        option        allbackups
        no option     httpclose
        retries       3
        maxconn       12083
        timeout http-request    10s
        timeout queue           1m
        timeout connect         10s
        timeout client          1m
        timeout server          1m
        timeout http-keep-alive 10s
        timeout check           10s

frontend web
        bind          0.0.0.0:80
        mode          http
        option        httplog
        capture       request header Host len 64
        default_backend   web_backend

backend web_backend
        mode          http
        balance       roundrobin
{% for host in groups[web_group] %}
{% set ip_addr = hostvars[host]['ansible_all_ipv4_addresses'][iface]  %}
        server        {{ hostvars[host]['inventory_hostname'] }} {{ ip_addr }}:80 weight 1 maxconn 12083 check
{% endfor %}